<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aaron_tejero.mascotaspersistencia.ConfigurarCuentaInstagram">

    <include android:id="@+id/miActionBar"
        layout="@layout/actionbar">
    </include>
    <TextView
        android:id="@+id/tvTituloConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Petagram"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="25dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilUsuario"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tvUsuarioconfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu usuario"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/btnGuardarCuenta"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Cuenra"
        android:theme="@style/miBotonRaised"/>


</LinearLayout>
